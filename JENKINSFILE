pipeline{
  agent any

  stages{
    stage("checkout"){
      steps{
        git branch 'main',
          url: "https://github.com/AshutoshKuinkel/Verifico-Server.git"
      }
    }
    stage("build"){
      steps{
        sh 'mvn compile'
      }
    }
    stage("test"){
      steps{
        sh 'mvn test'
      }
    }
    // link this to sonarqube or sonarcloud
    stage("code-quality"){
      steps{
        sh '''
        '''
      }
    }
    stage("artifact"){
      steps{
        sh 'mvn clean package'
      }
    }
  }
  post{
    success{
      echo 'Build Successfull!'
    }
    failure{
      echo 'Build Failed!'
    }
  }
}